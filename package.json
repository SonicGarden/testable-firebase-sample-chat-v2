{
  "name": "testable-firebase-sample-chat-v2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "yarn build && firebase deploy --except functions",
    "test": "vitest run",
    "test:rules": "vitest run -c vitest.node.config.ts",
    "test:firestore": "vitest run -c vitest.node.config.ts",
    "emulators:start:firestore": "firebase emulators:start --only firestore",
    "test:rule": "vitest run -c vitest.node.config.ts",
    "emulators:start": "firebase emulators:start --only firestore,storage",
    "deploy:rules": "firebase deploy --only firestore:rules"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "firebase": "^10.11.1",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.2",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cypress": "^13.9.0",
    "cypress-firebase": "^4.0.0",
    "eslint": "8.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "firebase-admin": "^12.1.0",
    "fishery": "^2.2.2",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  }
}
